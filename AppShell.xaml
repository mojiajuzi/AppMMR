<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMMR.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:AppMMR.Pages"
    Shell.FlyoutBehavior="Disabled"
    Title="AppMMR">

    <TabBar>
        <Tab Title="首页" Icon="house.svg">
            <ShellContent ContentTemplate="{DataTemplate views:HomePage}" />
        </Tab>
        <Tab Title="项目" Icon="list.svg" Route="Work">
            <ShellContent ContentTemplate="{DataTemplate views:WorkPage}"/>
        </Tab>
        <Tab Title="联系人" Icon="address_book.svg">
            <ShellContent ContentTemplate="{DataTemplate views:ContactPage}" />
        </Tab>
        <Tab Title="标签" Icon="tag.svg">
            <ShellContent ContentTemplate="{DataTemplate views:TagPage}" />
        </Tab>
    </TabBar>
</Shell>
