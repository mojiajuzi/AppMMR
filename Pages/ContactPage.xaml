<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppMMR.ViewModels"
             xmlns:model="clr-namespace:AppMMR.Models"
             x:DataType="vm:ContactViewModel"
             x:Class="AppMMR.Pages.ContactPage"
             Title="联系人"
             BackgroundColor="{StaticResource Gray100}">

    <Shell.TitleView>
        <Grid ColumnDefinitions="Auto,*,Auto" 
              Padding="0,0,10,0">
            <!-- 头部工具栏 -->
            <Grid Grid.Row="0"
                  ColumnDefinitions="*,Auto"
                  Padding="20,10"
                  ColumnSpacing="10">
                
                <!-- 搜索框 -->
                <SearchBar Grid.Column="0"
                           Text="{Binding SearchText}"
                           Placeholder="搜索联系人"
                           BackgroundColor="Transparent"
                           TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                           PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}"
                           CancelButtonColor="{StaticResource Primary}"
                           HeightRequest="40"/>

                <!-- 添加按钮 -->
                <Button Grid.Column="1"
                        Text="添加"
                        Command="{Binding AddContactCommand}"
                        BackgroundColor="{StaticResource Primary}"
                        TextColor="White"
                        HeightRequest="40"
                        WidthRequest="80"
                        CornerRadius="20"/>
            </Grid>
        </Grid>
    </Shell.TitleView>

    <Grid RowDefinitions="*" 
          Padding="20">
        <!-- 联系人列表 -->
        <CollectionView ItemsSource="{Binding SearchResults}"
                       Margin="0,5">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type model:ContactModel}">
                    <Frame Margin="0,6" 
                           Padding="16"
                           BackgroundColor="{StaticResource White}"
                           BorderColor="Transparent"
                           CornerRadius="8"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              RowSpacing="12">
                            <!-- 第一行：名称和状态 -->
                            <Grid Grid.Row="0" 
                                  ColumnDefinitions="*, Auto"
                                  ColumnSpacing="15">
                                <Label Grid.Column="0" 
                                       Text="{Binding Name}"
                                       VerticalOptions="Center"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray900}"/>

                                <Switch Grid.Column="1"
                                        IsToggled="{Binding Active}"
                                        OnColor="{StaticResource Primary}"
                                        ThumbColor="{StaticResource White}"
                                        VerticalOptions="Center"/>
                            </Grid>

                            <!-- 第二行：联系方式 -->
                            <VerticalStackLayout Grid.Row="1" 
                                               Spacing="8">
                                <!-- 手机号 -->
                                <Grid ColumnDefinitions="Auto,*" 
                                      ColumnSpacing="8"
                                      IsVisible="{Binding Phone, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                                    <Label Grid.Column="0"
                                           Text="手机："
                                           TextColor="{StaticResource Gray600}"
                                           FontSize="14"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Phone}"
                                           TextColor="{StaticResource Primary}"
                                           FontSize="14">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ContactViewModel}}, Path=MakePhoneCallCommand}"
                                                     CommandParameter="{Binding Phone}"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>
                                
                                <!-- 邮箱 -->
                                <Grid ColumnDefinitions="Auto,*" 
                                      ColumnSpacing="8"
                                      IsVisible="{Binding Email, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                                    <Label Grid.Column="0"
                                           Text="邮箱："
                                           TextColor="{StaticResource Gray600}"
                                           FontSize="14"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Email}"
                                           TextColor="{StaticResource Primary}"
                                           FontSize="14">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ContactViewModel}}, Path=SendEmailCommand}"
                                                     CommandParameter="{Binding Email}"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>
                                
                                <!-- 标签 -->
                                <Grid ColumnDefinitions="Auto,*" 
                                      ColumnSpacing="8"
                                      IsVisible="{Binding ContactTags.Count, Converter={StaticResource IntegerNotZeroConverter}, ConverterParameter=0}">
                                    <Label Grid.Column="0"
                                           Text="标签："
                                           TextColor="{StaticResource Gray600}"
                                           FontSize="14"/>
                                    <CollectionView Grid.Column="1"
                                                   ItemsSource="{Binding ContactTags}"
                                                   HeightRequest="24">
                                        <CollectionView.ItemsLayout>
                                            <LinearItemsLayout Orientation="Horizontal"
                                                     ItemSpacing="8"/>
                                        </CollectionView.ItemsLayout>
                                        <CollectionView.ItemTemplate>
                                            <DataTemplate x:DataType="model:ContactTagModel">
                                                <Frame Padding="8,2"
                                                       BackgroundColor="{StaticResource Primary}"
                                                       CornerRadius="4"
                                                       HasShadow="False">
                                                    <Label Text="{Binding Tag.Name}"
                                                           TextColor="White"
                                                           FontSize="12"/>
                                                </Frame>
                                            </DataTemplate>
                                        </CollectionView.ItemTemplate>
                                    </CollectionView>
                                </Grid>
                            </VerticalStackLayout>

                            <!-- 第三行：操作按钮 -->
                            <Grid Grid.Row="2"
                                  ColumnDefinitions="*,*"
                                  ColumnSpacing="12">
                                <!-- 查看按钮 -->
                                <Button Grid.Column="0"
                                        Text="查看"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ContactViewModel}}, Path=ViewContactCommand}"
                                        CommandParameter="{Binding}"
                                        BackgroundColor="{StaticResource Gray200}"
                                        TextColor="{StaticResource Gray900}"
                                        FontSize="14"
                                        HeightRequest="36"
                                        CornerRadius="4"/>
                                
                                <!-- 编辑按钮 -->
                                <Button Grid.Column="1"
                                        Text="编辑"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:ContactViewModel}}, Path=UpdateContactCommand}"
                                        CommandParameter="{Binding}"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="{StaticResource White}"
                                        FontSize="14"
                                        HeightRequest="36"
                                        CornerRadius="4"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Center">
                    <Label Text="暂无联系人"
                           TextColor="{StaticResource Gray400}"
                           FontSize="16"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>