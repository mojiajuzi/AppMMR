<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppMMR.ViewModels"
             xmlns:model="clr-namespace:AppMMR.Models"
             x:DataType="vm:WorkContactViewModel"
             x:Class="AppMMR.Pages.WorkContactPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
             Title="相关联系人">

    <Grid RowDefinitions="*,Auto">
        <!-- 联系人列表 -->
        <CollectionView Grid.Row="0"
                       ItemsSource="{Binding WorkContacts}"
                       Margin="20,20,20,20">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:WorkContactModel">
                    <Frame Margin="0,6" 
                           Padding="16"
                           BackgroundColor="White"
                           BorderColor="Transparent"
                           CornerRadius="8"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto"
                              RowSpacing="12">
                            <!-- 联系人信息 -->
                            <Grid Grid.Row="0" 
                                  ColumnDefinitions="*, Auto, Auto"
                                  ColumnSpacing="15">
                                <Label Grid.Column="0" 
                                       Text="{Binding Contact.Name}"
                                       VerticalOptions="Center"
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray900}"/>

                                <Label Grid.Column="1">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="￥"/>
                                            <Span Text="{Binding Amount, StringFormat='{0:N2}'}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                    <Label.TextColor>
                                        <Binding Path="IsCome" Converter="{StaticResource BoolToColorConverter}"/>
                                    </Label.TextColor>
                                    <Label.FontSize>16</Label.FontSize>
                                    <Label.FontAttributes>Bold</Label.FontAttributes>
                                    <Label.VerticalOptions>Center</Label.VerticalOptions>
                                </Label>

                                <Button Grid.Column="2"
                                        Text="编辑"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WorkContactViewModel}}, Path=EditContactCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="White"
                                        FontSize="12"
                                        HeightRequest="30"
                                        WidthRequest="50"
                                        Padding="0"
                                        CornerRadius="4"/>
                            </Grid>

                            <!-- 联系方式 -->
                            <VerticalStackLayout Grid.Row="1" 
                                               Spacing="8">
                                <!-- 手机号 -->
                                <Grid ColumnDefinitions="Auto,*" 
                                      ColumnSpacing="8"
                                      IsVisible="{Binding Contact.Phone, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                                    <Label Grid.Column="0"
                                           Text="手机："
                                           TextColor="{StaticResource Gray600}"
                                           FontSize="14"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Contact.Phone}"
                                           TextColor="{StaticResource Primary}"
                                           FontSize="14">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WorkContactViewModel}}, Path=MakePhoneCallCommand}"
                                                                 CommandParameter="{Binding Contact.Phone}"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>

                                <!-- 邮箱 -->
                                <Grid ColumnDefinitions="Auto,*" 
                                      ColumnSpacing="8"
                                      IsVisible="{Binding Contact.Email, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                                    <Label Grid.Column="0"
                                           Text="邮箱："
                                           TextColor="{StaticResource Gray600}"
                                           FontSize="14"/>
                                    <Label Grid.Column="1"
                                           Text="{Binding Contact.Email}"
                                           TextColor="{StaticResource Primary}"
                                           FontSize="14">
                                        <Label.GestureRecognizers>
                                            <TapGestureRecognizer Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WorkContactViewModel}}, Path=SendEmailCommand}"
                                                                 CommandParameter="{Binding Contact.Email}"/>
                                        </Label.GestureRecognizers>
                                    </Label>
                                </Grid>
                            </VerticalStackLayout>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Center">
                    <Label Text="暂无联系人"
                           TextColor="{StaticResource Gray400}"
                           FontSize="16"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- 添加按钮 -->
        <Border Grid.Row="1"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                StrokeThickness="1">
            <Button Text="添加联系人"
                    Command="{Binding AddContactCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="14"
                    HeightRequest="45"
                    CornerRadius="8"
                    Margin="20,10"/>
        </Border>
    </Grid>
</ContentPage>