<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppMMR.ViewModels"
             xmlns:model="clr-namespace:AppMMR.Models"
             xmlns:converters="clr-namespace:AppMMR.Converters"
             x:DataType="vm:WorkPaymentViewModel"
             x:Class="AppMMR.Pages.WorkPaymentPage"
             BackgroundColor="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource Gray900}}"
             Title="收支记录">

    <Grid RowDefinitions="*,Auto">
        <!-- 收支列表 -->
        <CollectionView Grid.Row="0"
                       ItemsSource="{Binding WorkPayments}"
                       Margin="20,20,20,20">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="model:WorkPaymentModel">
                    <Frame Margin="0,6" 
                           Padding="16"
                           BackgroundColor="White"
                           BorderColor="Transparent"
                           CornerRadius="8"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto"
                              RowSpacing="12">
                            <!-- 收支信息 -->
                            <Grid Grid.Row="0" 
                                  ColumnDefinitions="*, Auto, Auto"
                                  ColumnSpacing="15">
                                <VerticalStackLayout Grid.Column="0" 
                                                   Spacing="4">
                                    <Label Text="{Binding Contact.Name}"
                                           FontSize="16"
                                           FontAttributes="Bold"
                                           TextColor="{StaticResource Gray900}"/>
                                    <Label Text="{Binding Contact.Email}"
                                           FontSize="12"
                                           TextColor="{StaticResource Gray600}"
                                           IsVisible="{Binding Contact.Email, Converter={StaticResource StringNotNullOrEmptyConverter}}"/>
                                </VerticalStackLayout>

                                <Label Grid.Column="1"
                                       VerticalOptions="Center">
                                    <Label.FormattedText>
                                        <FormattedString>
                                            <Span Text="￥" 
                                                  TextColor="{Binding IsIncome, Converter={StaticResource BoolToColorConverter}}"/>
                                            <Span Text="{Binding Amount, StringFormat='{0:N2}'}"
                                                  TextColor="{Binding IsIncome, Converter={StaticResource BoolToColorConverter}}"/>
                                        </FormattedString>
                                    </Label.FormattedText>
                                    <Label.FontSize>16</Label.FontSize>
                                    <Label.FontAttributes>Bold</Label.FontAttributes>
                                </Label>

                                <Button Grid.Column="2"
                                        Text="编辑"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WorkPaymentViewModel}}, Path=EditPaymentCommand}"
                                        CommandParameter="{Binding .}"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="White"
                                        FontSize="12"
                                        HeightRequest="30"
                                        WidthRequest="50"
                                        Padding="0"
                                        CornerRadius="4"/>
                            </Grid>

                            <!-- 备注和日期 -->
                            <Grid Grid.Row="1" 
                                  ColumnDefinitions="*, Auto"
                                  IsVisible="{Binding Remark, Converter={StaticResource StringNotNullOrEmptyConverter}}">
                                <Label Grid.Column="0"
                                       Text="{Binding Remark}"
                                       TextColor="{StaticResource Gray600}"
                                       FontSize="14"/>
                                <Label Grid.Column="1"
                                       Text="{Binding PaymentDate, StringFormat='{0:yyyy-MM-dd}'}"
                                       TextColor="{StaticResource Gray400}"
                                       FontSize="12"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Center">
                    <Label Text="暂无收支记录"
                           TextColor="{StaticResource Gray400}"
                           FontSize="16"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>

        <!-- 添加按钮 -->
        <Border Grid.Row="1"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource Gray900}}"
                Stroke="{AppThemeBinding Light={StaticResource Gray200}, Dark={StaticResource Gray600}}"
                StrokeThickness="1">
            <Button Text="添加收支"
                    Command="{Binding AddPaymentCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    FontSize="14"
                    HeightRequest="45"
                    CornerRadius="8"
                    Margin="20,10"/>
        </Border>
    </Grid>
</ContentPage>