<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:AppMMR.ViewModels"
             xmlns:model="clr-namespace:AppMMR.Models"
             xmlns:enum="clr-namespace:AppMMR.Models.Enums"
             x:DataType="vm:WorkViewModel"
             x:Class="AppMMR.Pages.WorkPage">

    <Grid RowDefinitions="Auto,*">
        <!-- 头部工具栏 -->
        <Grid Grid.Row="0"
              ColumnDefinitions="*,Auto"
              Padding="20,10"
              ColumnSpacing="10">
            
            <!-- 搜索框 -->
            <SearchBar Grid.Column="0"
                      Text="{Binding SearchText}"
                      Placeholder="搜索项目"
                      BackgroundColor="Transparent"
                      TextColor="{AppThemeBinding Light={StaticResource Gray900}, Dark={StaticResource White}}"
                      PlaceholderColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}"
                      CancelButtonColor="{StaticResource Primary}"
                      HeightRequest="40"/>

            <!-- 添加按钮 -->
            <Button Grid.Column="1"
                    Text="添加"
                    Command="{Binding AddWorkCommand}"
                    BackgroundColor="{StaticResource Primary}"
                    TextColor="White"
                    HeightRequest="40"
                    WidthRequest="80"
                    CornerRadius="20"/>
        </Grid>

        <!-- 项目列表 -->
        <CollectionView Grid.Row="1"
                       ItemsSource="{Binding SearchResults}"
                       Margin="20,0,20,20">
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="{x:Type model:WorkModel}">
                    <Frame Margin="0,6" 
                           Padding="16"
                           BackgroundColor="{StaticResource White}"
                           BorderColor="Transparent"
                           CornerRadius="8"
                           HasShadow="True">
                        <Grid RowDefinitions="Auto,Auto,Auto"
                              RowSpacing="12">
                            <!-- 第一行：名称和状态 -->
                            <Grid Grid.Row="0" 
                                  ColumnDefinitions="*, Auto"
                                  ColumnSpacing="15">
                                <Label Grid.Column="0" 
                                       Text="{Binding Name}"
                                       VerticalOptions="Center"
                                       FontSize="18"
                                       FontAttributes="Bold"
                                       TextColor="{StaticResource Gray900}"/>

                                <Label Grid.Column="1"
                                       Text="{Binding Status, Converter={StaticResource WorkStatusConverter}}"
                                       TextColor="{StaticResource Primary}"
                                       FontSize="14"
                                       VerticalOptions="Center"/>
                            </Grid>

                            <!-- 第二行：时间和金额 -->
                            <VerticalStackLayout Grid.Row="1" 
                                                Spacing="8">
                                <Grid ColumnDefinitions="Auto,*" 
                                      ColumnSpacing="8">
                                    <Label Grid.Column="0"
                                           Text="起止时间："
                                           TextColor="{StaticResource Gray600}"
                                           FontSize="14"/>
                                    <Label Grid.Column="1"
                                           TextColor="{StaticResource Gray900}"
                                           FontSize="14">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="{Binding StartAt, StringFormat='{0:yyyy/MM/dd}'}" />
                                                <Span Text=" - " />
                                                <Span Text="{Binding EndAt, StringFormat='{0:yyyy/MM/dd}'}" />
                                            </FormattedString>
                                        </Label.FormattedText>
                                    </Label>
                                </Grid>

                                <Grid ColumnDefinitions="Auto,*" 
                                      ColumnSpacing="8">
                                    <Label Grid.Column="0"
                                           Text="项目金额："
                                           TextColor="{StaticResource Gray600}"
                                           FontSize="14"/>
                                    <Label Grid.Column="1">
                                        <Label.FormattedText>
                                            <FormattedString>
                                                <Span Text="￥"/>
                                                <Span Text="{Binding Funds, StringFormat='{0:N2}'}"/>
                                            </FormattedString>
                                        </Label.FormattedText>
                                        <Label.TextColor>
                                            <AppThemeBinding Light="{StaticResource Gray900}" Dark="{StaticResource White}"/>
                                        </Label.TextColor>
                                        <Label.FontSize>14</Label.FontSize>
                                    </Label>
                                </Grid>
                            </VerticalStackLayout>

                            <!-- 第三行：操作按钮 -->
                            <Grid Grid.Row="2"
                                  ColumnDefinitions="*,*"
                                  ColumnSpacing="12">
                                <!-- 查看按钮 -->
                                <Button Grid.Column="0"
                                        Text="查看"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WorkViewModel}}, Path=ViewWorkCommand}"
                                        CommandParameter="{Binding}"
                                        BackgroundColor="{StaticResource Gray200}"
                                        TextColor="{StaticResource Gray900}"
                                        FontSize="14"
                                        HeightRequest="36"
                                        CornerRadius="4"/>
                                
                                <!-- 编辑按钮 -->
                                <Button Grid.Column="1"
                                        Text="编辑"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type vm:WorkViewModel}}, Path=UpdateWorkCommand}"
                                        CommandParameter="{Binding}"
                                        BackgroundColor="{StaticResource Primary}"
                                        TextColor="{StaticResource White}"
                                        FontSize="14"
                                        HeightRequest="36"
                                        CornerRadius="4"/>
                            </Grid>
                        </Grid>
                    </Frame>
                </DataTemplate>
            </CollectionView.ItemTemplate>

            <CollectionView.EmptyView>
                <VerticalStackLayout HorizontalOptions="Center" 
                                   VerticalOptions="Center">
                    <Label Text="暂无项目"
                           TextColor="{StaticResource Gray400}"
                           FontSize="16"
                           HorizontalOptions="Center"/>
                </VerticalStackLayout>
            </CollectionView.EmptyView>
        </CollectionView>
    </Grid>
</ContentPage>